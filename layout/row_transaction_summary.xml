<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <RelativeLayout
                android:id="@+id/rowInfoPane"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/rowVendorImage"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="4dp"
                    app:srcCompat="@mipmap/logo_eversource_tight" />
                <TextView
                    android:id="@+id/rowTotalBalance"
                    android:text="@string/row_total_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/rowDate"
                    android:text="@string/row_date"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="center"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/rowPortion"
                    android:text="@string/row_portion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="35dp"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/rowPortionText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                     android:layout_below="@+id/rowVendorImage"
                    android:layout_marginEnd="4sp"
                    android:layout_toStartOf="@+id/rowTotalAmt"
                    android:gravity="end"
                    android:text="@string/row_who_paid_what"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/rowDiscount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rowPortionText"
                    android:layout_alignEnd="@+id/rowTotalAmt"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="4dp"
                    android:text="@string/row_discount_percent"
                    android:textAlignment="center"
                    android:textStyle="italic"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/rowTotalAmt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/rowPortionText"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="8dp"
                    android:text="@string/row_total"
                    android:textSize="18sp"
                    android:textStyle="bold|italic" />

            </RelativeLayout>

        </android.support.constraint.ConstraintLayout>






    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>